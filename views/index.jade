extends layout

block body
  div(ng-controller='AppCtrl')
    h2 Hello {{name}}
    ul.menu
      li
        a(href='view1') view1
      li
        a(href='view2') view2
    div(ng-view)
    div
      | Angular Socket.io seed app: v
      span(app-version)
  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='bower_components/angular-socket-io/socket.js')
  script(src="bower_components/quick-ng-repeat/quick-ng-repeat.js")
  script(src="http://maps.google.com/maps/api/js")
  script(src="bower_components/ngmap/build/scripts/ng-map.min.js")
  script.
    angular.module('ngMap').run(function($rootScope){
      $rootScope.mouseover = function(ev,num,bike,free){
        document.getElementById("show").innerHTML = "Numero de bicicletas "+bike+", "+free+" vagas."
      }
      $rootScope.mouseout = function(ev,num,bike,free){
        document.getElementById("show").innerHTML ="";
      }
    });
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')